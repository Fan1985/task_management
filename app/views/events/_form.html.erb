  <%= simple_form_for event, :html => { :class => 'col-lg-4' } do |f| %>
    <%= f.input :topic, label: "名稱" %>
    <%= f.input :content, label: "內容" %>
    <%= f.input :priority, label: "優先程度" %>
    <%= f.input :status, label: "狀態" %>
    <%= f.input :start_from, label: "開始時間" %>
    <%= f.input :end_at, label: "結束時間" %>
    <%= f.submit submit_text, class:'btn btn-primary'%>
  <% end%>